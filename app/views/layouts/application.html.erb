<!DOCTYPE html>
<html>
  <head>
    <title>Yutter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shares/flash' %>
    <div class="d-flex flex-nowrap w-100">
      <div class="left-nav">
        <%= render 'shares/left-nav' if user_signed_in? %>
      </div>
      <div class="w-100 border-left border-right">
        <%= render 'shares/navbar' %>
        <div class="w-100 main-container">
          <%= yield %>
        </div>
      </div>
      <div class="friend-nav">
        <%= render 'shares/friend-nav' if user_signed_in? %>
      </div>
    </div>
  </body>
</html>
